@model MyBlog.Models.Post
@{
	Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Edit: @Model.Title</title>
</head>
<body>
		<form asp-action="Update" method="post">
		<div>
			<label asp-for="Title">Title: </label>
			<input asp-for="Title">
		</div>

		<div>
			<label asp-for="Content">Content: </label>
		<textarea class="update-content" rows="5" asp-for="Content"></textarea>
		</div>
			<button type="submit">Submit</button>

		</form>
</body>
</html>
