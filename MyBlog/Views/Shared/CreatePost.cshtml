@model CreatePostModel 
@{
Layout = null; 
}


<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
		<link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.css">
</head>
<body>
	

<div class="container">

<div class="row">

<form asp-action="CreatePost" method="post" enctype="multipart/form-data" >
<h2 class="mb-3 mt-3">Create a New Blog Post</h2>
	<div class="mb-3" asp-validation-summary="All">	
		<div class="form-group">
		<label class="form-label">File</label>
		<input type="file" id="CoverImage" name="CoverImage" accept=".jpeg,.jpg,.png" class="form-control w-70" type="file" asp-for="CoverImage"/>
	</div>
	</div>
	<div class="mb-3">	
		<div class="form-group">
		<label class="form-label" asp-for="Title"></label>
		<input class="form-control w-70" asp-for="Title"/>
		</div>
	</div>

	<div class="mb-3">
		<div class="form-group"> <label class="form-label " asp-for="Content"></label>
		<textarea class="whitespace-pre form-control w-70 form-text" rows="5" asp-for="Content"></textarea>
		</div>

	</div>
	

	<button class="btn btn-primary" type="submit">Submit</button>

</form>

</div>
</div>

</body>
</html>

