@model MyBlog.Models.ListModel

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Admin Panel</title>
		<h2>@Model.User.UserName</h2>




</head>
<body>
			

		<h1> Create New Post </h1>
		<!--- There should be only a single logged in admin and Model.Posts should show all posts send id-->
		<a asp-controller="BlogPost" asp-action="CreatePost">Create new post</a>

		@foreach(var post in @Model.Posts)
		{
			<p>@post.Content</p>
			<p>@post.Title</p>
			<p>@post.AuthorId</p>
			<p>@post.Author</p>
			<a asp-controller="BlogPost" asp-action="Update" asp-route-id="@post.ID">Update </a>
			<a asp-controller="BlogPost" asp-action="Delete" asp-route-id="@post.ID">Delete </a>
		}


		<a asp-controller="Account" asp-action="Logout">Logout</a>


		
	
</body>
</html>
